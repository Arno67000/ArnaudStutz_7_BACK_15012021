{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "test/*": ["test/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts"],
    "types": ["reflect-metadata"]
}

