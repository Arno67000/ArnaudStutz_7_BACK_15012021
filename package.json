{
  "name": "grouposerv",
  "version": "1.0.0",
  "description": "Groupomania_API",
  "main": "server.js",
  "scripts": {
    "build": "tsc --project ./",
    "dev": "nodemon src/server.ts",
    "husky:setup": "husky install && npx husky add .husky/pre-commit \"yarn prettier:fix\" && npx husky add .husky/pre-commit \"yarn lint\" && npx husky add .husky/pre-push \"yarn test\" && npx husky add .husky/pre-push \"yarn build\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.{ts,json}",
    "prettier:fix": "prettier --write **/*.{ts,json}",
    "start": "set NODE_ENV=production&& node build/src/server.js",
    "swagger:gen": "npx swagger-typescript-api -p ./src/swagger/swagger.json -o ./src/swagger/api -t ./src/swagger/templates/modular --modular",
    "swagger:bundle": "npx swagger-cli bundle ./src/swagger/baseApi.json --outfile ./src/swagger/swagger.json --type json",
    "swagger:full": "yarn swagger:bundle && yarn swagger:gen && yarn prettier:fix",
    "test": "set NODE_ENV=test&& jest --detectOpenHandles --verbose",
    "test:watch": "set NODE_ENV=test&& jest --detectOpenHandles --verbose --watch",
    "test:coverage": "set NODE_ENV=test&&jest --detectOpenHandles --coverage --verbose"
  },
  "author": "Arno67000",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "node": "16.13.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.2.0",
    "typeorm": "^0.2.41",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
